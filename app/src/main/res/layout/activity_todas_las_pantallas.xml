<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodasLasPantallas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/carruselBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_app"
            android:onClick="irCarrusel"
            android:text="carrusel"
            android:textStyle="italic"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/formularioBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_app"
            android:onClick="irFormulario"
            android:text="formulario"
            android:textStyle="italic"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/portalBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_app"
            android:onClick="irPortal"
            android:text="portal"
            android:textStyle="italic"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/youtubeBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul_app"
            android:onClick="irYoutube"
            android:text="youtube"
            android:textStyle="italic"
            tools:ignore="OnClick" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>